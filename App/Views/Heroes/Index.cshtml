@model App.ViewModels.HeroListViewModel

@{
    ViewData["Title"] = "Les héros";
}

<div class="text-center">
    <h1 class="display-4">Les héros</h1>

    <div class="hero-list">
            @foreach (var item in Model.HeroList) {
            <div class="hero-list__hero-card">
                <div class="hero-list__hero-card__hero-asset">
                    <img src=@item.AssetLink>
                </div>
                <div class="hero-list__hero-card__hero-name">
                    <h2>@Html.DisplayFor(modelItem => item.Name)</h2>
                </div>
                <div class="hero-list__hero-card__hero-role">
                    <p>@Html.DisplayFor(modelItem => item.Role)</p>
                </div>
                <div class="hero-list__hero-card__hero-stats">
                    <div class="hero-list__hero-card__hero-stats__left">
                        <p><img src="assets/icons/hearth.png"> @Html.DisplayFor(modelItem => item.Health)</p>
                        <p><img src="assets/icons/sword.png"> @Html.DisplayFor(modelItem => item.AttackDamage)</p>
                        <p><img src="assets/icons/magic-wand.png"> @Html.DisplayFor(modelItem => item.AbilityPower)</p>
                    </div>
                    <div class="hero-list__hero-card__hero-stats__right">
                        <p><img src="assets/icons/armor.png"> @Html.DisplayFor(modelItem => item.Armor)</p>
                        <p><img src="assets/icons/magic-resist.png"> @Html.DisplayFor(modelItem => item.MagicResistance)</p>
                        <p><img src="assets/icons/crit.png"> @Html.DisplayFor(modelItem => item.CritRate)%</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>