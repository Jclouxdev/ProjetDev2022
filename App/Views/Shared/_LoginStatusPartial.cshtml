@if(User.Identity.IsAuthenticated){
    <form method="post" class="form-inline" asp-controller="Logout" asp-action="Logout">
        Welcome @User.Identity.Name
        <button type="submit" class="ml-2 btn btn-link">Logout</button>
    </form>
} else {
    <a class="btn btn-link" asp-controller="Login" asp-action="Index">Login</a>
}