@model App.ViewModels.SpellsListViewModel

@{
    ViewData["Title"] = "Les Sorts";
}

<div class="text-center">
    <h1 class="display-4">Les sorts</h1>

    <div class="hero-list">
            @foreach (var item in Model.SpellList) {
            <div class="hero-list__hero-card">
                <div class="hero-list__hero-card__hero-asset">
                    <img src=@item.AssetLink>
                </div>
                <div class="hero-list__hero-card__hero-name">
                    <h2>@Html.DisplayFor(modelItem => item.Name)</h2>
                </div>
                <div class="hero-list__hero-card__hero-role">
                    <p>@Html.DisplayFor(modelItem => item.Cost)</p>
                </div>
                <div class="hero-list__hero-card__hero-stats">
                    <div class="hero-list__hero-card__hero-stats">
                        <p><img src="assets/icons/sword.png"> @Html.DisplayFor(modelItem => item.Physical)</p>
                        <p><img src="assets/icons/magic-wand.png"> @Html.DisplayFor(modelItem => item.Magical)</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>